    $(function() {
        //set datepickers
        var datepickers = ["frmEvStartDate", "frmEvEndDate"];
        $.each(datepickers, function(idx, value) {
            $('#' + value).datepicker({'dateFormat': 'yy-mm-dd'});
        });
        
