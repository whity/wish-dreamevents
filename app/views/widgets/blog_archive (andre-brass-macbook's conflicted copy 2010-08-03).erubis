<div class="box">
    <h3>Arquivo</h3>
    <ul>
        <% archives.each() do |item| %>
            <li>
                <a href="/blog/<%= item.year %>/<%= item.strftime("%m") %>/">
                    <%= I18n.localize(item, :format => "%B %Y") %>
                </a>
            </li>
        <% end %>
    </ul>
</div>